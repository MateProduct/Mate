<div class="hstack gap-3">
  <div>
    <h2>Profile: </h2>
    <!--<h2>Details about <em><%#= @user.uname%></em></h2>-->
    <ul class="list-group" >
<!--      <li class="list-group-item active text-black"style="background-color: #e3f2fd; " aria-current="true"><h4>Details about <em><%#= @user.uname%></em></h4></li>-->
      <li class="list-group-item">    UNI: <%= @user.uni %></li>
      <li class="list-group-item">    Lionmail: <%= @user.lionmail %></li>
      <li class="list-group-item">    Phone Number: <%= @user.phone %></li>
      <li class="list-group-item">    Contact: <%= @user.contact %></li>
      <li class="list-group-item">    Available Time: <%= @user.time_slot %></li>
      <li class="list-group-item">    Skills: <%= @user.skills %></li>
    </ul>
    <!-- leave more space between the two lists -->
    <br>
    <h3 >About Me:</h3>
    <br>
    <ul class="list-group" >
      <!--      <li class="list-group-item active text-black"style="background-color: #e3f2fd; " aria-current="true"><h4>Details about <em><%#= @user.uname%></em></h4></li>-->
      <li class="list-group-item"> Descriptionï¼š <%= @user.description %></li>
    </ul>

    <br>
    <%= link_to 'Edit profile', profile_path(params[:uni]), :class => 'btn btn-primary' %>
  </div>
  <div class="mb-auto ms-auto p-2">
    <div>
      <h2>My Courses:</h2>
      <br>
      <div class="list-group" id="listGroup">
        <% @course_list.each do |course|%>
          <button class="list-group-item list-group-item-action" type="button">
            <ul class="list-group list-group-horizontal">
              <li class="list-group-item"><%= course['course_no'] %></li>
              <li class="list-group-item"><%= course['section_no'] %></li>
              <li class="list-group-item"><%= link_to 'Find Mates', course_sec_path(@user.uni,course['course_no'], course['section_no'])%></li>
            </ul>
          </button>
        <% end %>

      </div>
    <br>
      <%= link_to 'Add Course', add_course_path(params[:uni]), :class => 'btn btn-primary' %>
    </div>
  </div>

</div>
