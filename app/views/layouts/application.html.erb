<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Mate!</title>
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
</head>
<body>
<%# These classes come from the Bootstrap CSS framework. %>
<nav class="navbar navbar-expand-lg mb-3" style="background-color: #e3f2fd;">
  <a class="navbar-brand nav-bar-link" href="/users">
    <img src="/assets/hr_m.png" alt="Logo" width="50" height="50" class="d-inline-block">
    <!--    <img src="<%#= app/assets/img.png %>">-->
    <%#= image_tag 'img.png' %>
    <h1 style="display: inline;">Mate!</h1>
  </a>
  <div class="container-fluid">

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="nav  navbar-nav me-auto mb-2 mb-lg-0">
        <% if @uni.nil? %>
          <li class="nav-item">
            <%= link_to 'Home', users_path, :class => 'nav-link disabled' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Home', course_path(@uni), :class => 'nav-link nav-bar-link' %>
          </li>
        <% end %>
        <% if @uni.nil? %>
          <li class="nav-item">
            <%= link_to 'Add Course', users_path, :class => 'nav-link disabled' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Add Course', add_course_path(@uni), :class => 'nav-link nav-bar-link' %>
          </li>
        <% end %>
        <% if @uni.nil? %>
          <li class="nav-item">
            <%= link_to 'Edit Profile', users_path, :class => 'nav-link disabled' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Edit Profile', profile_path(@uni), :class => 'nav-link nav-bar-link' %>
          </li>
        <% end %>
      </ul>
      <% if !@uni.nil? %>
        <form class="form-inline my-2 my-lg-0">
          <%= link_to 'Sign Out', users_path, :class => 'btn btn-outline-secondary my-2 my-sm-0' %>
        </form>
      <% end %>
    </div>
  </div>
</nav>
<div class="container">
  <%# Render "flash" messages in our application. This loads _flash.erb %>
  <%= render 'layouts/flash' %>
  <main id="main">
    <%= yield %>
  </main>
</div>
</body>
</html>
